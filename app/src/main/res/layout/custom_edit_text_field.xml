<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@null">

    <FrameLayout
        android:id="@+id/custom_edit_frame_layout_container"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:animateLayoutChanges="true">

        <EditText
            android:id="@+id/customEditTextBoxMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_custom_edit_text_main"
            android:ems="10"
            android:focusable="true"
            android:hint="PlaceolderMain"
            android:inputType="textPersonName"
            android:paddingLeft="20dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:padding="5dp"
            android:visibility="gone"
            app:srcCompat="@mipmap/exclamation_icon" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/custom_edit_linear_layout_hint_container"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:weightSum="1"
        android:visibility="gone"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/customEditTextBoxHint"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.85"
            android:background="@drawable/rounded_custom_edit_text_hint_text_view"
            android:gravity="left"
            android:hint="PlaceolderHint"
            android:paddingLeft="20dp"
            android:textColor="@android:color/background_light"
            android:textSize="10dp" />

    </LinearLayout>

</LinearLayout>